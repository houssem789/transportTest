<!doctype html>
<html lang="en">
	<head>
		<!-- Required meta tags -->
		<meta charset="utf-8">
		<meta
		name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<!-- Bootstrap CSS -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

		<title>Hello, world!</title>
	</head>
	<body>


		<main role="main" class="container">
			<a href="/" class="btn btn-primary my-2">Retour</a>

			<div class="starter-template">
				<form id="formId" action='/'>
					<div class="form-group">
						<label for="exampleInputEmail1">Numero de la ligne</label>
						<input type="text" class="form-control" id="ligne" aria-describedby="emailHelp" placeholder="Enter numÃ©ro de ligne">
					</div>
				</form>
				<button class="filter-button btn btn-primary my-2">Filtrer</button>

			</div>
			<br>
			<table class="table table-bordered">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Station</th>
						<th scope="col">Ligne</th>
					</tr>
				</thead>
				<tbody>

					{% for correspondance in correspondances %}
						{% if ligne is defined and ligne is not empty and correspondance.ModeTransport.Ligne == ligne %}
							<tr>
								<td>{{ correspondance.id }}</td>
								<td>{{ correspondance.station.nomGare }}</td>
								<td>{{ correspondance.ModeTransport.Ligne }}</td>
							</tr>
						{% endif %}

					{% endfor %}

					{% if ligne is not defined %}
						{% for correspondance in correspondances %}
							<tr>
								<td>{{ correspondance.id }}</td>
								<td>{{ correspondance.station.nomGare }}</td>
								<td>{{ correspondance.ModeTransport.Ligne }}</td>
							</tr>
						{% endfor %}
					{% endif %}

				</tbody>
			</table>
		</main>
		<!-- /.container -->

		<!-- Bootstrap core JavaScript
